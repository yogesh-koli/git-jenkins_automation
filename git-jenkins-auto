pipeline {
    agent any
    parameters {
        string(name: 'TAG_NAME', defaultValue: '', description: 'Enter the tag name')
        string(name: 'BRANCH_NAME', defaultValue: 'master', description: 'Enter the branch name')
        string(name: 'YOUR_MSG', defaultValue: '', description: 'Enter the msg')
    }

    environment {
        GIT_HOME="/home/yogesh-koli/git"
        GIT_URL="https://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@github.com/yogesh-koli/git-jenkins_automation"
    }

    stages {
        stage('Pull and push from GitHub') {
            steps {
                script {
                    sh '''
                        whoami
                        cd /dir2/git-jenkins_automation
                        ls -lsrt
                        git branch
                        git stash
                        git pull $GIT_URL
                       '''  
                   if (BRANCH_NAME == "master") {
                       sh 'git pull origin master'
                   } else {
                       sh "git pull $GIT_URL"
                    }
                }
            }
        }
      stage('Git checkout') {
            steps {
                script {
                    sh '''
                        cd /dir2/git-jenkins_automation
                        if [ "$BRANCH_NAME" != "master" ]; then
                            git checkout $BRANCH_NAME
                        fi
                    '''
                }
            }
        }

        stage('Pull and push from GitHub (master Branch)') {
            steps {
                sh '''
                    cd /dir2/git-jenkins_automation
                    git pull origin master
                '''
            }
        }

        stage('Create and push a tag') {
            steps {
                script {
                    def tagName = params.TAG_NAME.trim()

                    if (TAG_NAME) {
                        sh '''
                            cd /dir2/git-jenkins_automation
                            echo $TAG_NAME
                            git tag -a $TAG_NAME -m "$TAG_NAME"
                            git pull $GIT_URL
                            git push https://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@github.com/yogesh-koli/git-jenkins_automation --tags

                        '''
                    } else {
                        error('Tag name not provided. Tagging aborted.')
                    }
                }
            }
        }

        stage('Pull a tag') {
            steps {
                sh '''
                    cd /dir2/git-jenkins_automation
                    git fetch --tags
                    git checkout ${params.TAG_NAME}
                '''
            }
        }
    }
}
